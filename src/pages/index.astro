---
import Layout from '../layouts/Layout.astro'
import '@/styles/global.css'
import { Button } from "@/components/ui/button"
import { Label } from "@/components/ui/label"
import { Input } from "@/components/ui/input"
import { Textarea } from "@/components/ui/textarea"
---

<div>
	<section
	  class="relative h-screen bg-cover bg-center"
	  style={{ backgroundImage: "url('/front-of-building.jpg')" }}
	  aria-label="Front of West Main Church Of Christ"
	>
	  <div class="absolute inset-0 bg-black opacity-50"></div>
	  <div class="relative z-10 flex flex-col items-start justify-center h-full text-left text-white pl-8 md:pl-24">
		<h1
		  class="text-5xl md:text-7xl font-semibold"
		  style={{ textShadow: "0px 4px 5px rgba(0, 0, 0, 0.4)" }}
		>
		  West Main <br /> Church Of Christ
		</h1>
		<p class="text-2xl mt-4">
		  Join us on Sundays at 1pm and Wednesdays at 6:30pm.
		</p>
		<div class="mt-8 flex space-x-4">
		  <a href="/contact">
			<Button class="bg-primary text-primary-foreground hover:bg-primary-dark transition duration-300">
			  Contact
			</Button>
		  </a>
		</div>
	  </div>
	  <div class="absolute bottom-0 w-full">
		<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
		  <path
			fill="#F2F2F2"
			fill-opacity="1"
			d="M0,224L1440,288L1440,320L0,320Z"
		  ></path>
		</svg>
	  </div>
	</section>

	<section class="w-full max-w-4xl mx-auto py-16 px-4">
	  <div class="text-left">
		<h2 class="text-5xl font-semibold py-10">Service Times</h2>
		<div class="text-2xl space-y-4">
		  <p>Sundays: 1pm</p>
		  <p>Wednesdays: 6:30pm</p>
		</div>
		<div class="mt-8">
		  <a href="/contact">
			<Button class="bg-primary text-primary-foreground hover:bg-primary-dark transition duration-300">
			  Contact Us for More Information
			</Button>
		  </a>
		</div>
	  </div>
	</section>

	<section class="w-full max-w-4xl mx-auto py-16 px-4">
	  <div>
		
	  </div>
	  <div class="text-left">
		<div class="w-full max-w-2xl">
		  <form class="space-y-6 bg-white p-8 rounded-lg shadow-lg">
			<h2 class="text-4xl font-semibold py-1 italic">Contact Us</h2>
			<div class="flex flex-col md:flex-row space-y-4 md:space-y-0 md:space-x-4">
			  <div class="flex-1 space-y-4">
				<div>
				  <Label htmlFor="first-name">First Name</Label>
				  <Input
					id="first-name"
					type="text"
					class="mt-1 block w-full"
				  />
				</div>
				<div>
				  <Label htmlFor="email">Email</Label>
				  <Input
					id="email"
					type="email"
					class="mt-1 block w-full"
				  />
				</div>
				<div>
				  <Label htmlFor="phone">Phone</Label>
				  <Input
					id="phone"
					type="tel"
					class="mt-1 block w-full"
				  />
				</div>
			  </div>
			  <div class="flex-1 space-y-4">
				<div>
				  <Label htmlFor="last-name">Last Name</Label>
				  <Input
					id="last-name"
					type="text"
					class="mt-1 block w-full"
				  />
				</div>
				<div>
				  <Label htmlFor="message">Message</Label>
				  <Textarea
					id="message"
					class="mt-1 block w-full h-24"
				  ></Textarea>
				</div>
			  </div>
			</div>
			<Button
			  type="submit"
			  class="w-full py-2 px-4 bg-primary text-white hover:bg-primary-dark transition duration-300"
			>
			  Submit
			</Button>
		  </form>
		</div>
	  </div>
	</section>
  </div>